<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ManualVehicleSelection"
    tools:showIn="@layout/activity_manual_vehicle_selection">


    <TextView
        android:id="@+id/select_vehicle_lbl"
        android:layout_width="328dp"
        android:layout_height="60dp"
        android:layout_marginStart="45dp"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="43dp"
        android:layout_marginEnd="38dp"
        android:layout_marginRight="38dp"
        android:gravity="center"
        android:text="Select the vehicle number: "
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/errorview" />

    <Spinner
        android:id="@+id/vehicle_selection_spinner"
        android:layout_width="281dp"
        android:layout_height="62dp"
        android:layout_marginStart="42dp"
        android:layout_marginLeft="42dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="88dp"
        android:layout_marginRight="88dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/select_vehicle_lbl" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="151dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/vehicle_signin_btn"
            android:layout_width="124dp"
            android:layout_height="94dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="32dp"
            android:background="@color/colorPrimary"
            android:text="Vehicle in"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/vehicle_signout_btn"
            android:layout_width="124dp"
            android:layout_height="94dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="10dp"
            android:background="@color/viewfinder_laser"
            android:text="Vehicle out"
            android:textColor="@color/white" />
    </LinearLayout>

    <TextView
        android:id="@+id/errorview"
        android:layout_width="338dp"
        android:layout_height="35dp"
        android:layout_marginStart="35dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="38dp"
        android:layout_marginRight="38dp"
        android:textColor="@color/viewfinder_laser"
        android:textSize="18dp"
        android:visibility="invisible"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>