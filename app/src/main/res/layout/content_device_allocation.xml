<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backMainColor"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".DeviceAllocation"
    tools:showIn="@layout/activity_device_allocation">


    <androidx.cardview.widget.CardView
        android:id="@+id/allocation_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="420dp"
        app:cardElevation="12dp"
        android:layout_margin="7dp"
        android:layout_marginStart="7dp"
        android:layout_marginLeft="7dp"
        android:layout_marginBottom="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="92dp"
            android:gravity="center"
            android:text="Device Details"
            android:textColor="@color/teal"
            android:textSize="30sp" />

        <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginLeft="7dp"
           android:layout_marginTop="34dp"
           android:layout_marginRight="5dp"
           android:layout_gravity="center_vertical"
           android:orientation="vertical">

           <Button
               android:id="@+id/submit_btn"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="18dp"
               android:textColor="@color/white"
               android:background="@color/colorPrimary"
               android:layout_marginHorizontal="5dp"
               android:textAllCaps="false"
               android:text="Submit" />
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginHorizontal="7dp"
               android:layout_marginVertical="10dp"
               android:padding="5dp"
               android:orientation="horizontal">

               <TextView
                   android:id="@+id/error_tv"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:gravity="center"
                   android:visibility="gone"
                   android:textColor="@color/Orangered"
                   android:textSize="17sp"
                    />
           </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginHorizontal="7dp"
               android:layout_marginVertical="5dp"
               android:padding="5dp"
               android:orientation="horizontal">

               <TextView
                   android:id="@+id/textView2"
                   android:layout_width="110dp"
                   android:layout_height="33dp"
                   android:text="Device Type:"
                   android:textColor="@color/teal"
                   android:textSize="17sp"
                   android:textStyle="bold" />

               <Spinner
                   android:id="@+id/dev_type_spinner"
                   android:layout_width="200dp"
                   android:layout_height="wrap_content"
                   android:layout_marginHorizontal="3dp"
                   android:layout_marginLeft="3dp" />
           </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginHorizontal="7dp"
               android:layout_marginVertical="5dp"
               android:orientation="horizontal">

               <TextView
                   android:id="@+id/textView"
                   android:layout_width="110dp"
                   android:layout_height="33dp"
                   android:textColor="@color/teal"
                   android:textStyle="bold"
                   android:textSize="17sp"
                   android:text="Department:" />

               <Spinner
                   android:id="@+id/department_spinner"
                   android:layout_width="200dp"
                   android:layout_marginLeft="2dp"
                   android:layout_height="wrap_content" />
           </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginHorizontal="7dp"
               android:layout_marginVertical="5dp"
               android:orientation="horizontal">

               <TextView
                   android:id="@+id/empid_tv"
                   android:layout_width="110dp"
                   android:layout_height="33dp"
                   android:textStyle="bold"
                   android:textColor="@color/teal"
                   android:textSize="17sp"
                   android:text="Emp ID:" />

               <Spinner
                   android:id="@+id/empid_spinner"
                   android:layout_width="200dp"
                   android:layout_marginLeft="2dp"
                   android:layout_height="38dp" />
           </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginHorizontal="7dp"
               android:layout_marginVertical="5dp"
               android:orientation="horizontal">

               <TextView
                   android:id="@+id/username_lbl"
                   android:layout_width="110dp"
                   android:layout_height="33dp"
                   android:textStyle="bold"
                   android:textColor="@color/teal"
                   android:textSize="17sp"
                   android:text="Emp Name:" />

               <TextView
                   android:id="@+id/username_tv"
                   android:layout_width="200dp"
                   android:layout_height="wrap_content"
                   android:textStyle="bold"
                   android:textSize="17sp" />
           </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginHorizontal="7dp"
               android:layout_marginVertical="5dp"
               android:orientation="horizontal">

               <TextView
                   android:id="@+id/status_lbl"
                   android:layout_width="110dp"
                   android:layout_height="33dp"
                   android:textStyle="bold"
                   android:textColor="@color/teal"
                   android:textSize="17sp"
                   android:text="Status:" />

               <Spinner
                   android:id="@+id/status_spinner"
                   android:layout_width="200dp"
                   android:layout_marginLeft="2dp"
                   android:layout_height="38dp" />
           </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginHorizontal="7dp"
               android:layout_marginVertical="10dp"
               android:orientation="horizontal">

               <TextView
                   android:id="@+id/remarks_lbl"
                   android:layout_width="110dp"
                   android:layout_height="33dp"
                   android:textStyle="bold"
                   android:textColor="@color/teal"
                   android:textSize="17sp"
                   android:text="Remarks:" />

               <EditText
                   android:id="@+id/remarks_tv"
                   android:layout_width="300dp"
                   android:maxLength="50"
                   android:layout_marginLeft="2dp"
                   android:layout_height="wrap_content" />
           </LinearLayout>




       </LinearLayout>



    </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>