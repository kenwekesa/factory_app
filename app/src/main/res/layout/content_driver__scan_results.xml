<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".QR_results"
    tools:showIn="@layout/activity_driver__scan_results">


    <androidx.cardview.widget.CardView
        android:layout_width="334dp"
        android:layout_height="594dp"
        android:layout_marginStart="34dp"
        android:layout_marginLeft="34dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="43dp"
        android:layout_marginRight="43dp"
        android:layout_marginBottom="62dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="301dp"
            android:layout_height="546dp"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:paddingTop="1dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/submit_button"
                android:layout_width="271dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="12dp"
                android:background="@color/colorPrimaryDark"
                android:text="Submit"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/vehicle_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Vehicle Number: "
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/vehicle_number_view"
                android:layout_width="238dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:text="Vehicle Number: "
                android:textAlignment="center"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/driver_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:text="Driver Number: "
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/driver_number_view"
                android:layout_width="238dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:text="Driver Number: "
                android:textAlignment="center"
                android:textSize="15dp" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/gate_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Gate Name: "
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/gate_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Gate Name: "
                    android:textAlignment="center"
                    android:textSize="15dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="2dp"
                android:gravity="left"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Remarks: "
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/remarks_box"
                    android:layout_width="200dp"
                    android:layout_height="70dp"
                    android:gravity="top"
                    android:inputType="text|textMultiLine"
                    android:maxLength="50" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="2dp"
                android:layout_marginBottom="112dp"

                android:layout_marginTop="10dp"
                android:layout_marginRight="2dp"
                android:gravity="left"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="O.Meter: "
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/odometer_box"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:gravity="top"
                    android:inputType="number"
                    android:maxLength="30" />
            </LinearLayout>


        </LinearLayout>

        <TextView
            android:id="@+id/scan_submit_error_view"
            android:layout_width="324dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="TextView"
            android:layout_marginTop="5dp"
            android:textColor="@color/colorAccent"
            android:visibility="invisible" />


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>